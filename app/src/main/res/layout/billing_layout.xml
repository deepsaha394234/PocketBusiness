<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F1E39">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B1839">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productName_billListLayout"
                android:layout_width="115dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Product Name"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/productQuantity_billListLayout"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="Quantity"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/productUnit_billListLayout"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/calculatedPrice_billListLayout"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:text="Total Price"
                android:textAlignment="center"
                android:textColor="#FFFEFE" />

            <Button
                android:id="@+id/deleteButton_billListLayout"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>